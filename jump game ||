class Solution {
    public int jump(int[] nums) {
       if(nums.length<=1){
            return 0;
        }
        
        int maxStep= 0;
        int jump= 0;
        int curr=0;

     for(int i=0; i<nums.length-1; i++){
         maxStep= Math.max(maxStep, i+nums[i]);

         if(curr==i){
             curr= maxStep;
             jump++;}}

             return jump;
     }
    }
