package com.java.MyProject;
import java.util.HashMap;

public class BinaryArray {
	public static void main(String[] args) {
		
		
		int arr[]= {0,1,1,0,0,1,0};
		
System.out.println(	"Max length of subarray with equal 0 and 1: " +findMaxLength(arr));

	}

	private static int findMaxLength(int[] arr) {
		
		int sum= 0;
		int MaxLength  =0;
		
		HashMap <Integer, Integer> map = new HashMap<>();

		for (int i = 0; i < arr.length; i++) {
			if(arr[i]==0) {// if 0 is found , subtract one
				sum-=1;  }
			else {
				sum+= 1;  }//else plus 1
			
			if(map.containsKey(sum)) {  //  if sum is found before
				MaxLength= Math.max(MaxLength, i-map.get(sum));  }  //get its index
			else {
				map.put(sum, i);  }
		 
		}
		
		return MaxLength;}
		
	}
	

