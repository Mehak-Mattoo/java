	int arr[]= {0,1,3,2,7,5,4};

	System.out.println("Missing number is "+ getMissingnumber(arr));}

	private static int getMissingnumber(int[] arr) {

	int sum1= 0;
	int max= arr[0];

	for (int i = 0; i < arr.length; i++) {

	if(arr[i]> max) {
	max = arr[i];}
	sum1+= arr[i]; }

	for (int i = 1; i <= max; i++) {

	sum1 -= i;}

	return Math.abs(sum1);

	
	
}
}
