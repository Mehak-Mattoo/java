int arr[]= {1,2,3,7,5};

	int target= 12;

	array(arr,arr.length, target);}
 
private static void array(int[] arr, int n, int target) {

for (int i = 0; i < n; i++) {	
for (int j = i + 1; j < n; j++) {
	
	int Sum = arr[i];
	Sum += arr[j];

if (Sum == target) {

System.out.println("Sum found between indexes " +i + " and " + j); return;}}}


System.out.println("No pair sum found ");}
}


