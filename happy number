	
 Scanner s=new Scanner(System.in);
 System.out.println("Enter n: ");
 int num= s.nextInt();
 
 int sum=0;
 
while(num !=0) {
	sum=0;
	 sum += Math.pow(num%10,2);  // getting remainder and storing inside sum
	num/=10; }   // getting number shorter 
	
	
	
if (sum==1) {
System.out.println(true);
}else {
	System.out.println(false);
}
 
}	
}
